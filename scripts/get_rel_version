main([]) ->
  io:format("~s~n",
            lists:foldl(
              fun
                ({release, {_Name, Version}, _}, A) ->
                  [Version | A];
                (_, A) -> A
              end,
              [],
              relx())).

root_dir() ->
  filename:dirname(escript:script_name()).

config() ->
  filename:join([root_dir(),"../rebar.config"]).

relx() ->
  {ok, Configuration} = file:consult(config()),
  proplists:get_value(relx, Configuration).
