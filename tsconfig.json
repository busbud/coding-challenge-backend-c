{
  "compilerOptions": {
      "outDir": "dist",
      "target": "ESNext",
      "module": "ESNext",
      "strict": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "newLine": "lf",
      "noImplicitAny": true,
      "types": [
          "node",
          "mocha"
      ],
      "paths": {
          "@/*": [
              "src/*"
          ],
      },
  },
  "exclude": [
      "node_modules",
      "dist"
  ],
  "include": [
      "./",
  ]
}
