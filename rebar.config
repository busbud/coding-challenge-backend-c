{erl_opts, [debug_info]}.

{deps, [{cowboy, {git, "git://github.com/ninenines/cowboy.git", {tag, "2.6.3"}}},
        {epgsql, "4.2.1"},
        {poolboy, "1.5.2"},
        {jsx, {git, "https://github.com/talentdeficit/jsx.git", {tag, "v2.8.0"}}},
        {ecache, {git, "https://github.com/mattsta/ecache.git", {tag, "2.0.0"}}}]}.

{erlc_opts, [debug_info, report, verbose, warn_export_all,
             warn_export_vars, warn_obsolete_guard, warn_shadow_vars,
             warn_untyped_record, warn_unused_import, warnings_as_errors]}.

{ct_log_dir, "test/logs"}.
{ct_readable, true}.
{ct_opts, [{config, "config/test.config"}]}.

{profiles, [{test,
             [{deps, [{meck,
                       {git, "git://github.com/eproxus/meck.git", {tag, "0.8.13"}}}]}]},
            {dev,
             [{deps, [{sync, ".*",
                       {git, "git://github.com/rustyio/sync.git", {branch, "master"}}}]}]}]}.

{shell, [{apps, [busbudcc,
                 sync]}]}.

{relx, [{release, {busbudcc, "0.0.1"},
         [busbudcc]},

        {dev_mode, false},
        {include_erts, true},
        {sys_config, "config/sys.config"},

        {extended_start_script, false}]}.
