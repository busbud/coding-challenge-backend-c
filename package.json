{
  "name": "coding-challenge-backend-c",
  "version": "0.0.0",
  "description": "coding challenge in Nodejs",
  "main": "app.js",
  "scripts": {
    "pre-commit": "lint-staged",
    "dev": "nodemon app.js",
    "migrate": "./node_modules/migrate/bin/migrate",    
    "start": "node app.js",
    "test": "PORT=3000 nyc --reporter=text ./node_modules/mocha/bin/mocha --exit ./test"
  },  
  "pre-commit": [
    "pre-commit"
  ],
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "git add"
    ],
    "test/**/*.js": [
      "prettier --write",
      "git add"
    ],
    "migrations/**/*.js": [
      "prettier --write",
      "git add"
    ],
    "app.js": [
      "prettier --write",
      "git add"
    ]
  },
  "author": "",
  "license": "WTFPL",
  "dependencies": {
    "csv-parser": "^2.3.0",
    "lodash": "^4.17.15",
    "migrate": "^1.6.2",
    "mongodb": "^3.3.0-beta2",
    "redis": "^2.8.0",
    "remove-accents": "^0.4.2"
  },
  "engines": {
    "node": "10.16.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "lint-staged": "^9.2.1",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.18.2",
    "sinon": "^7.3.2",
    "supertest": "^4.0.2"
  }
}
