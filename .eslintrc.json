{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "legacyDecorators": true,
      "experimentalObjectRestSpread": true
    }
  },
  "extends": "standard",
  "plugins": ["import", "standard", "promise"],
  "env": {
    "browser": false,
    "commonjs": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "semi": ["error", "always"],
    "no-console": "off",
    "prefer-template": ["error"]
  }
}
