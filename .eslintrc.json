{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "import/prefer-default-export": "off",
    "max-len": ["warn", 125, 2, { "ignoreUrls": true,"ignoreComments": true }],
    "linebreak-style": "off",        
    "no-console": "off",
    "no-cond-assign": "off",
    "no-restricted-syntax": "off",
    "class-methods-use-this": "warn",
    "no-underscore-dangle": "off"
  },
  "ignorePatterns": ["*.json"]
}